<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome to the cinema!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="/css/style.css" crossorigin="anonymous">
        <link rel="stylesheet" href="/vendor/twbs/bootstrap/dist/css/bootstrap.min.css" crossorigin="anonymous">
    {% endblock %}
</head>
<body class="homepage">
    {% block javascripts %}
        <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
        <script src="/vendor/twbs/bootstrap/dist/js/bootstrap.min.js"></script>


        <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
        <script type="text/javascript" src="/js/daterangepicker.js"></script>
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
        <script src="/js/lib.js"></script>
    {% endblock %}

    {% block body %}

        <main role="main">

            {% block header %}
                <section class="jumbotron">
                    <div class="container">
                        <h1 class="jumbotron-heading">
                            <div class="outer">
                                <div class="height">
                                    <a href="/" class="inner">Нова Пошта</a>
                                </div>
                            </div>
                        </h1>
                        <p class="lead text-muted">Тест на работу с датами :)</p>
                    </div>

                </section>
            {% endblock %}


            <div class="album py-5 bg-light">
                <div class="container">
                    <div class="row ">
                        <h2 class="jumbotron-heading">Добавить новую задачу: </h2>
                        <div class="col-lg">
                            <!--Body-->
                            <div class="modal-body">
                                <form id="homepage-form__date-range" action="/home/handleForm" method="post" class="needs-validation" onsubmit="return false;" novalidate>
                                    <!-- Material input name -->
                                    <div class="data-range__field-block md-form form-sm">
                                        <i class="fa fa-calendar prefix"></i>
                                        <input name="daterange" type="text" id="date-range" class="form-control form-control-sm" placeholder="Введите даты" required>
                                        <div class="valid-feedback">
                                            Отлично, вы ввели правильные значения
                                        </div>
                                        <div class="invalid-feedback">
                                            Пожалуйста введите диапазон значений
                                        </div>
                                    </div>

                                    <div class="btn-group data-range__btn-group" role="group" aria-label="Basic example">
                                        <div class="text-center mt-4 mb-2">
                                            <button class="btn btn-primary" onclick="$('#homepage-form__date-range').removeAttr('onsubmit'); takeData()" type="submit">POST<i class="fa fa-send ml-2"></i></button>
                                        </div>
                                        <div class="text-center mt-4 mb-2">
                                            <button class="btn btn-primary" onclick="takeData(true)" type="submit">AJAX<i class="fa fa-send ml-2"></i></button>
                                        </div>
                                    </div>
                                    <div style="clear:both"></div>
                                    <div class="date-range-diff">
                                    {% if entry.diff_date is defined %}
                                        <p>{{ secondsToTime(entry.diff_date) }}</p>
                                    {% endif %}
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </main>
    {% endblock %}

    {% block footer %}
    <!-- Footer -->
        <div class="footer">
            <div class="container">
                <a href='#'><i class="fab fa-twitch fa-3x fa-fw"></i></a>
                <a href='#'><i class="fab fa-facebook fa-3x fa-fw"></i></a>
                <a href='#'><i class="fab fa-twitter fa-3x fa-fw"></i></a>
                <a href='#'><i class="fab fa-youtube fa-3x fa-fw"></i></a>
                <a href='#'><i class="fa fa-rss fa-3x fa-fw"></i></a>
                <a href='#'><i class="fab fa-vine fa-3x fa-fw"></i></a>
                <a href='#'><i class="fab fa-flickr fa-3x fa-fw"></i></a>
                <a href='#'><i class="fab fa-linkedin fa-3x fa-fw"></i></a>
                </span>
            </div>
        </div>
    <!-- Footer -->
    {% endblock %}
</body>
</html>